{% extends 'user'|layout %}

{% set page_title = library.name %}

{% block head %}{% endblock %}

{% block content %}
    <h3>{{ page_title }}</h3>

    <b-form inline @submit="fetchBooks" v-on:submit.prevent>
        <b-form-group>
            <b-form-input trim
                          v-model="search"
                          placeholder="{{ 'library.search'|trans }}"
                          v-on:scan="handleScan"
                          :disabled="searching"
            >
            </b-form-input>
            <b-button variant="primary" type="submit" :disabled="searching">
                <b-icon icon="search" v-if="!searching"></b-icon>
                <b-spinner small v-if="searching"></b-spinner>
                {{ 'fields.search'|trans }}
            </b-button>
        </b-form-group>
    </b-form>

    <b-table class="mt-3" striped hover
             :fields="fields"
             :items="searchResults">
        <template v-slot:cell(selector)="book">
            <b-button variant="outline-secondary" class="bg-white" size="sm" @click="addBook(book.item)">
                <b-icon icon="plus"></b-icon>
            </b-button>
        </template>
    </b-table>
{% endblock %}

{% block scripts %}
    <script type="text/javascript">
        window.Mixin.add('search', {
            data: {
                searching: false,
                search: '',
                searchResults: [],
                books: {{ library.books|vue }},

                fields: [
                    {
                        key: 'selector',
                        label: '',
                    },
                    {
                        key: 'title',
                        label: '{{ 'fields.name'|trans }}',
                        sortable: true,
                    },
                    {
                        key: 'series',
                        label: '{{ 'fields.series'|trans }}',
                    },
                    {
                        key: 'authors',
                        label: '{{ 'fields.authors'|trans }}',
                        sortable: true,
                        formatter: (authors) => (authors.join('; ')),
                    },
                    {
                        key: 'publisher',
                        label: '{{ 'fields.publisher'|trans }}',
                        sortable: true,
                    },
                    {
                        key: 'year',
                        label: '{{ 'fields.year'|trans }}',
                        sortable: true,
                    },
                    {
                        key: 'language',
                        label: '{{ 'fields.language'|trans }}',
                    }
                ],
            },

            methods: {
                handleScan: function (value) {
                    this.search = value;

                    this.fetchBooks();
                },

                fetchBooks: function () {
                    if (this.search.length === 0) {
                        this.searchResults = [];
                        return;
                    }

                    this.searching = true;

                    axios.post('{{ route('library.search', library.slug) }}', {
                        search: this.search
                    }).then(({ data }) => {
                        this.error = {};
                        this.searchResults = data;
                    }).catch(({ response }) => {
                        this.error = response;
                    }).then(() => {
                        this.searching = false;
                    });
                },

                addBook: function (book) {
                    console.log(book);
                },
            },
        })
    </script>
{% endblock %}
